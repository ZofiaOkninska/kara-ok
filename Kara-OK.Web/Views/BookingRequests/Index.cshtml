@using Kara_OK.Web.Models.Enums
@model IReadOnlyList<Kara_OK.Web.Models.ViewModels.BookingRequests.BookingRequestListViewModel>

@{
    ViewData["Title"] = ViewBag.Title ?? "Requests";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Customer"))
{
    <p style="margin-top: 20px;">
        <a class="btn btn-primary" asp-controller="Rooms" asp-action="Index">Choose room to create a new request</a>
    </p>
}

@if (Model.Count == 0)
{
    <p>No requests yet.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Room</th>
            @if (User.IsInRole("Owner"))
            {
                <th>Customer</th>
            }
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Rooms" asp-action="Details" asp-route-id="@r.RoomId">@r.RoomName</a>
                </td>
                @if (User.IsInRole("Owner"))
                {
                    <td>@(r.CustomerName ?? "-")</td>
                }
                <td>@r.StartDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@r.EndDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@r.Status</td>
                <td>@r.TotalPrice.ToString("0.00") z≈Ç</td>
                <td>
                    <a asp-action="Details" asp-route-id="@r.Id">Details</a>
                        @if (User.IsInRole("Owner") && r.Status == BookingStatus.Pending)
                        {
                            <form asp-action="Accept" asp-route-id="@r.Id" method="post" class="d-inline" style="margin-left:10px;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">Accept</button>
                            </form>

                            <form asp-action="Reject" asp-route-id="@r.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Reject</button>
                            </form>
                        }
                </td>
            </tr>
        }
        </tbody>
    </table>
}