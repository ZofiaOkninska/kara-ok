@model IReadOnlyList<Kara_OK.Web.Models.ViewModels.Rooms.RoomListViewModel>

<h1>Rooms</h1>

@if (Model is null || Model.Count == 0)
{
    <p>No active rooms available.</p>
}
else
{
    <div class="card-dark p-4">
        <table class="table-dark">
            <thead>
                <tr>
                    <th class="col-name">Name</th>
                    <th class="col-cap">Capacity</th>
                    <th class="col-price">Price / hour</th>
                    <th class="col-actions"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td class="col-name">@r.Name</td>
                    <td class="col-cap">@r.Capacity</td>
                    <td class="col-price">@r.PricePerHour.ToString("0.00") z≈Ç</td>
                    <td class="col-actions">
                        <a asp-controller="Rooms" asp-action="Details" asp-route-id="@r.Id">
                            Details
                        </a>

                        @if (User.IsInRole("Owner"))
                        {
                            <span> | </span>
                            <a asp-controller="Rooms" asp-action="Edit" asp-route-id="@r.Id">Edit</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}